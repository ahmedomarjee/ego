FROM openjdk:11.0.3-jdk
WORKDIR /usr/src/app
ADD . .
RUN ./mvnw package -Dmaven.test.skip=true
FROM openjdk:11.0.3-jdk
COPY --from=0 /usr/src/app/target/ego-*-exec.jar /usr/bin/ego.jar
ENV EGO_USER ego
ENV EGO_USER_ID 9999
ENV EGO_DIR /target
RUN useradd -r -u $EGO_USER_ID $EGO_USER  \
    && mkdir -p $EGO_DIR \
    && chown -R $EGO_USER $EGO_DIR 

ENTRYPOINT ["java", "-jar", "/usr/bin/ego.jar"]
EXPOSE 8081/tcp
